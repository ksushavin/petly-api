                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/RegistrationResponse"
                                }
                            }
                        }
                    },
                    "Error": {
                        "description": "Error",
                        "content": {
                            "application/json": {
                                "schema": {
